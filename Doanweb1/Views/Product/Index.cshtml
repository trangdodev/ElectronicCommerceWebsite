                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("", "product", new { categoryId = item.CategoryId, page = 1})"><i class="fa @item.Description"></i>@item.CategoryName</a>
                                </li>
                            }

                        </ul>
                    </nav>
                </div>

