@{
    var controller = ViewContext.RouteData.Values["controller"].ToString();
    var action = ViewContext.RouteData.Values["action"].ToString();
    var isActiveController = new Func<string, string, string, string, string>((ctrl, act, activeStyle, inactiveStyle) => controller == ctrl && action == act ? activeStyle : inactiveStyle);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TG STORE</title>
    @Styles.Render("/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400|Source+Code+Pro:700,900&display=swap" rel="stylesheet">

    <!-- CSS Libraries -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="~/Content/Template/lib/slick/slick.css" rel="stylesheet">
    <link href="~/Content/Template/lib/slick/slick-theme.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="@Url.Content("~/Content/Template/css/style.css")" rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/Content/css")" rel="stylesheet">

</head>

<body>
    <!-- Nav Bar Start -->
    <div class="nav">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-md bg-dark navbar-dark">
                <a href="#" class="navbar-brand">MENU</a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto">
                        <a href="@Url.Action("Index", "Home")" class="nav-item nav-link @isActiveController("Home","Index","active","")">Trang chủ</a>
                        <a href="@Url.Action("Index", "Product")" class="nav-item nav-link @isActiveController("Product","Index","active","")">Sản phẩm</a>
                        @*<a href="~/Content/Template/product-detail.html" class="nav-item nav-link">Product Detail</a>*@
                        <a href="@Url.Action("Index", "ShoppingCart")" class="nav-item nav-link @isActiveController("ShoppingCart","Index","active","")">Giỏ hàng</a>
                        <a href="@Url.Action("Index", "WishList")" class="nav-item nav-link @isActiveController("WishList","Index","active","")">Sản phẩm yêu thích</a>
                        @*<a href="~/Content/Template/my-account.html" class="nav-item nav-link">Tài khoản của bạn</a>*@
                        <!--<div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Xem thêm</a>
                            <div class="dropdown-menu">
                                <a href="~/Content/Template/wishlist.html" class="dropdown-item">Wishlist</a>
                                <a href="~/Views/Account/Login.cshtml" class="dropdown-item">Đăng ký/Đăng nhập</a>-->
                        @*<a href="~/Content/Template/contact.html" class="dropdown-item">Contact Us</a>*@
                        <!--</div>
                        </div>-->
                    </div>
                    @Html.Partial("_LoginPartial")
                </div>
            </nav>
        </div>
    </div>
    <!-- Nav Bar End -->
    <!-- Bottom Bar Start -->
    <div class="bottom-bar">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <div class="logo">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="~/Content/Template/img/Logo.png" alt="Logo">
                        </a>
                    </div>
                </div>
                <div class="col-md-6">
                    @if (!((controller == "product" || controller == "Product") && (action == "" || action == "Index" || action == "index")))
                    {
                        using (Html.BeginForm("", "Product", FormMethod.Get, new { @class = "search" }))
                        {
                            @Html.TextBox("productName", "", new { @placeholder = "Tìm kiếm sản phẩm" })
                            <button type="submit"><i class="fa fa-search"></i></button>
                        }
                    }

                </div>
                <div class="col-md-3">
                    <div class="user">
                        <a href="@Url.Action("Index", "WishList")" class="btn wishlist">
                            <i class="fa fa-heart"></i>
                            <span>@{Html.RenderAction("GetWishListCount", "WishList");}</span>
                        </a>
                        <a href="@Url.Action("Index", "ShoppingCart")" class="btn cart">
                            <i class="fa fa-shopping-cart"></i>
                            <span>@{Html.RenderAction("GetCountItemInCart", "ShoppingCart");}</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bottom Bar End -->
    @RenderBody()
    <hr />
    <!-- Footer Start -->
    <div class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="footer-widget">
                        <h2>TG STORE</h2>
                        <div class="contact-info">
